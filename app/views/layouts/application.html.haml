!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1"}

    %title ObjectiveMapperPrototype
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default
      .container-fluid
        %button.navbar-toggle.collapsed{'data-toggle' => 'collapse', 'data-target' => '#primary-navbar', 'aria-expanded' => 'false'}
          %span.sr-only Toggle Navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: root_path} Objective Mapper
        .collapse.navbar-collapse#primary-navbar
          %ul.nav.navbar-nav
            - if logged_in?
              %li= link_to 'Objectives', people_objectives_path
              %li= link_to 'Admin', rails_admin_path
              %li= link_to 'Logout', logout_path
            - else
              %li= link_to 'Login', login_path
    .container-fluid= yield
